<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/wave_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wave1" />

    <ImageView
        android:id="@+id/orangeCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="3dp"
        android:translationY="-350dp"
        app:layout_constraintBottom_toBottomOf="@+id/yellowCircle"
        app:layout_constraintEnd_toEndOf="@+id/goluboCircle"
        app:layout_constraintStart_toStartOf="@+id/goluboCircle"
        app:layout_constraintTop_toTopOf="@+id/fioletCircle"
        app:srcCompat="@drawable/oval" />

    <ImageButton
        android:id="@+id/btnGalka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/galka" />

    <ImageButton
        android:id="@+id/btnKrestik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/krestik" />

    <ImageView
        android:id="@+id/blueCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationY="-350dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/orange2Circle"
        app:layout_constraintEnd_toEndOf="@+id/btnGalka"
        app:layout_constraintStart_toStartOf="@+id/yellowCircle"
        app:layout_constraintTop_toTopOf="@+id/orange2Circle"
        app:srcCompat="@drawable/oval2" />

    <ImageView
        android:id="@+id/orange2Circle"
        android:layout_width="93dp"
        android:layout_height="95dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="26dp"
        android:translationY="-350dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/orangeCircle"
        app:layout_constraintStart_toEndOf="@+id/blueCircle"
        app:srcCompat="@drawable/oval3" />

    <ImageView
        android:id="@+id/goluboCircle"
        android:layout_width="133dp"
        android:layout_height="0dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:translationY="-350dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/fioletCircle"
        app:layout_constraintStart_toEndOf="@+id/yellowCircle"
        app:layout_constraintTop_toTopOf="@+id/orangeCircle"
        app:srcCompat="@drawable/oval4" />

    <ImageView
        android:id="@+id/fioletCircle"
        android:layout_width="113dp"
        android:layout_height="81dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="18dp"
        android:translationY="-350dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/blueCircle"
        app:layout_constraintEnd_toEndOf="@+id/blueCircle"
        app:srcCompat="@drawable/oval5" />

    <ImageView
        android:id="@+id/yellowCircle"
        android:layout_width="151dp"
        android:layout_height="0dp"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:translationY="-350dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/blueCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blueCircle"
        app:srcCompat="@drawable/oval6" />

</androidx.constraintlayout.widget.ConstraintLayout>